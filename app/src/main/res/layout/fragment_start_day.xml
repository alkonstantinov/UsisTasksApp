<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <com.rey.material.widget.TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Избор на маршрут"
            android:textSize="24dp"
            android:textStyle="bold"/>


        <com.rey.material.widget.TextView
            android:id="@+id/username_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="----------"
            android:textColor="#000000"
            android:textSize="22sp" />

        <com.rey.material.widget.TextView
            android:id="@+id/status_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="---------------"
            android:textColor="#000000"
            android:textSize="22sp" />

        <Spinner
            android:id="@+id/select_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown" />


    </LinearLayout>


    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/goBack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:fab_backgroundColor="#dddddd"
        app:fab_iconSrc="@drawable/go_back"></com.rey.material.widget.FloatingActionButton>

    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/bNext"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:fab_backgroundColor="#dddddd"
        app:fab_iconSrc="@drawable/next"></com.rey.material.widget.FloatingActionButton>

</FrameLayout>