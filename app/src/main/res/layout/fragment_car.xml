<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical">
        <com.rey.material.widget.TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Избор на автомобил"
            android:textSize="24dp"
            android:textStyle="bold"/>



        <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="4"
            android:rowCount="1"
            tools:context="com.ipltd_bg.usistasksapp.fragment.LoginFragment">

            <ImageButton
                android:id="@+id/bScanCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:background="@drawable/barcode"
                android:layout_column="0"
                android:layout_row="0"
                />
            <ImageButton
                android:id="@+id/bNFCCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:background="@drawable/nfc"
                android:layout_column="1"
                android:layout_row="0"
                />
            <EditText
                android:id="@+id/tbCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:hint="Рег. ном."
                android:layout_column="2"
                android:layout_columnSpan="2"
                android:layout_row="0"
                />
        </GridLayout>





    </LinearLayout>


    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/goBack"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="left|top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:fab_backgroundColor="#dddddd"
        app:fab_iconSrc="@drawable/go_back"></com.rey.material.widget.FloatingActionButton>

    <com.rey.material.widget.FloatingActionButton
        android:id="@+id/bNext"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="right|top"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        app:fab_backgroundColor="#dddddd"
        app:fab_iconSrc="@drawable/next"></com.rey.material.widget.FloatingActionButton>



</FrameLayout>