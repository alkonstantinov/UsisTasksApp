<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/bScanObject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Сканиране на обект"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/bCar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Смяна на автомобил"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/bStaff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Смяна на екип"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/bLogOff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="true"
            android:text="Край на деня"
            android:layout_gravity="center"
            android:textSize="20dp"/>
        <ListView
            android:id="@+id/lvTasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></ListView>
    </LinearLayout>

</FrameLayout>
